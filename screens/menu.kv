<MenuScreen>:
	name: 'menu'
	NavigationLayout:
		ScreenManager:
			Screen:
				BoxLayout:
					orientation: 'vertical'			  
					MDToolbar:
						title: 'LANGUAGES'
						type: 'top'
						left_action_items: [['menu',lambda x: nav_drawer.toggle_nav_drawer()]]
						elevation:5
					BoxLayout :
						orientation: 'vertical'				
						ScrollView:
							GridLayout:
								cols: 1
								
								spacing: root.height/3
								size_hint_y: None
								height:self.minimum_height
								MDList:
									OneLineAvatarIconListItem:
										text:"English"
										font_style: 'H6'
										
										on_release:
											root.manager.current="profile1"
										ImageLeftWidget:
											source:'alphaimg/music.ico'		
									OneLineAvatarIconListItem:
										text:"Hindi"
										font_style: 'H6'
										
										on_release:
											root.manager.current="profile2"
										ImageLeftWidget:
											source:'alphaimg/music.ico'
									
									OneLineAvatarIconListItem:
										text:"Others"
										font_style: 'H6'
										
										on_release:
											root.manager.current="profile3"
										ImageLeftWidget:
											source:'alphaimg/music.ico'													
										
									
		MDNavigationDrawer: