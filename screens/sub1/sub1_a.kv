<subscreenone>
	name: 'sub1_a'
	NavigationLayout:
		ScreenManager:
			Screen:
				BoxLayout:
					orientation: 'vertical'
					MDToolbar:
						title: 'introduction'
						left_action_items: [["arrow-left",lambda x:  root.ch_sc()]]
					BoxLayout:
						orientation: 'vertical'
						ScrollView:
							GridLayout:
								padding: 0
								spacing: 50
								cols:1
								height: self.minimum_height
								size_hint_y: None
								
								
								
								MDCard:
									pos_hint: {'center_x': .5, 'center_y': .5}				
									size_hint: None,None
									size: root.width-100,1000
									
								MDLabel:
									markup: True
									size_hint:1, None
									size: self.texture_size
									text:app.textit('txt_mat/txt_sub1/txt_sub1_a.txt')
								
								
								